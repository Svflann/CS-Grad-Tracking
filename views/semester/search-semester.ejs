<!-- views/semester/search-semester.ejs -->
<p>Search Semesters</p>
<div class="search-bar">
	<form action="/semester" method="get">
		<div class="form-group row">
			<label for="searchYear" class="col-md-4">Year:</label>
			<div class="col-md-8">
				<input type="number" class="form-control" id="searchYear" placeholder="Year" name="year"/>
			</div>
		</div>
		<div class="form-group row">
			<label for="searchSeason" class="col-md-4">Season:</label>
			<div class="col-md-8">
				<select name="season" class="form-control" id="searchSeason">
					<option value=""></option>
					<option value="FALL">Fall</option>
					<option value="SPRING">Spring</option>
				</select>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-4 offset-md-4">
				<button type="submit" class="btn btn-primary">Search</button>
			</div>
		</div>
	</form>
</div>
<div>
	<p>
		<a href="/semester/create" class="btn btn-primary btn-block">Create Semester</a>
	</p>
</div>