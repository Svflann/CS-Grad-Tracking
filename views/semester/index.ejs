<!-- views/semester/index.ejs -->
<!DOCTYPE html>

<html>
	<head>
		<title>Search Semesters</title>
		<%- include('../partials/head.ejs') %>
	</head>
	
	<body>
		<div class="container-fluid h-100">
			<div class="row h-100">

				<div class='col-lg-3 sidebar text-center'>

					<%- include('../partials/admin-sidebar.ejs') %>

					<%- include('./search-semester.ejs') %>

				</div>
				
				<div class='col-lg-9 panelbg text-center'>
					<h1>Semesters</h1>
					 <% if(semesters.length>0) { %>
						<table align="center" border="1" class="display-table">
							<thead>
								<tr>
									<th class="col-SemesterYear">Year</th>
									<th class="col-SemesterSeason">Season</th>
									<th class="col-SemesterDelete"></th>
								</tr>
							</thead>
							<tbody>

								<% for(var i=0; i<semesters.length; i++) { %>
									<tr>
										<td><%= semesters[i].year%></td>
										<td><%= semesters[i].season%></td>
										<td>
											<!--IDK if I need to use form here for delete, change it if it is wrong-->
											<form action="/semester/delete/<%= semesters[i]._id%>" method="post">
												<button type="submit" class="btn btn-danger" onclick="return confirm('Do you really want to delete this?');">Delete</button>
											</form>
										</td>
									</tr>
								<% } %>
							</tbody>
						</table>
					<% } else { %>
						<div>No semesters found.</div>
					<% } %>
				</div>
			</div>
		</div>
	</body>
</html>