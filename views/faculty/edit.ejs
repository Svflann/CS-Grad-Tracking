<!-- views/faculty/edit.ejs -->
<!DOCTYPE html>

<html>
	<head>
		<title>Edit faculty</title>
		<%- include('../partials/head.ejs') %>
	</head>
	
	<body>
		<div class="container-fluid h-100">
			<div class="row h-100">

				<div class='col-lg-3 sidebar text-center'>

					<%- include('../partials/admin-sidebar.ejs') %>

					<%- include('./search-faculty.ejs') %>

				</div>
				<div class='col-lg-9 panelbg text-center'>
					<h1>Edit Faculty</h1>
					<form action="/faculty/put" method="post">
						<table align="center">
							<tbody>
								<tr>
									<td>Username</td>
									<td><%=faculty.username%></td>
									<td><input type="hidden" name="username" value="<%=faculty.username%>" required /></td>
								</tr>
								<tr>
									<td>First name</td>
									<td><input type="text" name="firstName" value="<%=faculty.firstName%>" /></td>
								</tr>
								<tr>
									<td>Last name</td>
									<td><input type="text" name="lastName" value="<%=faculty.lastName%>" required/></td>
								</tr>
								<tr>
									<td>PID</td>
									<td><%=faculty.pid%></td>
									<td><input type="hidden" name="pid" value="<%=faculty.pid%>" required/></td>
								</tr>
								<tr>
									<td colspan="2"><button type="submit" class="btn btn-success">Update</button></td>
								</tr>
							</tbody>
						</table>
					</form>
					<form action="/faculty/delete/<%=faculty._id%>" method="post">
						<button type="submit" class="btn btn-danger" onclick="return confirm('Do you really want to delete this?');">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>