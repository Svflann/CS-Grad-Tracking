<!-- views/job/edit.ejs -->
<!DOCTYPE html>

<html>
	<head>
		<title>Edit job</title>
		<%- include('../partials/head.ejs') %>
	</head>
	
	<body>
		<div class="container-fluid h-100">
			<div class="row h-100">

				<div class='col-lg-2 sidebar text-center'>

					<%- include('../partials/admin-sidebar.ejs') %>

					<%- include('./search-job.ejs') %>

				</div>
				<div class='col-lg-10 panelbg text-center'>
					<h1>Edit job</h1>
					
					<form action="/job/put" method="post">
						<input type="hidden" name="_id" value=<%=job._id%>></input>
						<div class="form-group row">
							<label for="inputPosition" class="col-md-2 offset-md-3">Position</label>
							<div class="col-md-4">
								<input type="text" class="form-control" id="inputPosition" name="position" value="<%=job.position%>" required/>
							</div>
						</div>

						<div class="form-group row">
							<label for="inputSupervisor" class="col-md-2 offset-md-3">Supervisor</label>
							<div class="col-md-4">
								<select name="supervisor" class="form-control" id="inputSupervisor" required>
									<option value=<%=job.supervisor._id%>><%=job.supervisor.lastName%>, <%=job.supervisor.firstName%></option>
									<% for(var i=0; i < faculty.length; i++){ %>
										<option value=<%=faculty[i]._id%>><%=faculty[i].lastName%>, <%=faculty[i].firstName%></option>
									<% } %>
								</select>
							</div>
						</div>

						<% if(job.course != null) { %>
						<div class="form-group row">
							<label for="inputCourse" class="col-md-2 offset-md-3">Course</label>
							<div class="col-md-4">
								<select name="course" class="form-control" id="inputCourse" required>
									<option value=<%=job.course._id%>><%=job.course.name%> <%=job.course.number%>, section <%=job.course.section%></option>
									<% for(var i=0; i < courses.length; i++){ %>
										<option value=<%=courses[i]._id%>><%=courses[i].name%> <%=courses[i].number%>, section <%=courses[i].section%></option>
									<% } %>
								</select>
							</div>
						</div>
						<% } %>

						<% if(job.description != null) { %>
						<div class="form-group row">
							<label for="inputDescription" class="col-md-2 offset-md-3">Description</label>
							<div class="col-md-4">
								<input type="text" name="description" class="form-control" id="inputDescription" value="<%=job.description%>"/>
							</div>
						</div>
						<% } %>
							

						<div class="form-group row align-items-end">
							<div class="col-md-4 offset-md-4">
								<button type="submit" class="btn btn-success">Update</button>
							</div>
						</div>
					</form>
					<form action="/job/delete/<%=job._id%>" method="post">
						<button type="submit" class="btn btn-danger" onclick="return confirm('Do you really want to delete this?');">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>